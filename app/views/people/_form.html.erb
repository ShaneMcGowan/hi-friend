<%= form_with model: person do |form| %>
  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
    <% person.errors.full_messages_for(:first_name).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
    <% person.errors.full_messages_for(:last_name).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>